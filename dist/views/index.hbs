                      <button class="p-1 text-sm font-medium leading-5 text-white bg-purple-600 rounded-md hover:bg-purple-700"
                        onclick="window.location.href='/{{student_id}}'">Chi tiết</button>
                      <a href="/export/grade/{{student_id}}">
                          <button class="p-1 text-sm font-medium leading-5 text-white bg-purple-600 rounded-md hover:bg-purple-700">
                            Bảng điểm
                       </button>
