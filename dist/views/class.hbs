<body>
  <div class="flex h-screen bg-gray-100 dark:bg-gray-900">
    <div class="flex flex-col flex-1 w-full">
      <header class="z-10 py-4 bg-white shadow-lg dark:bg-gray-800">
        <div class="container flex items-center justify-between h-full px-6 mx-auto text-purple-600 dark:text-purple-300">
          <button class="p-1 mr-5 -ml-1 rounded-md md:hidden focus:outline-none focus:shadow-outline-purple"
            @click="toggleSideMenu" aria-label="Menu">
            <svg class="w-6 h-6" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd"
                d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
                clip-rule="evenodd"></path>
            </svg>
          </button>
          <ul class="flex items-center mx-auto gap-6 flex-shrink-0 space-x-6">
            <li class="relative">
              <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
                Hệ thống quản lý môn học FIT@HCMUS
              </h2>
            </li>
            <li class="flex">
              <button class="rounded-md focus:outline-none focus:shadow-outline-purple" @click="toggleTheme"
                aria-label="Toggle color mode">
                <template x-if="!dark">
                  <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
                  </svg>
                </template>
                <template x-if="dark">
                  <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd"
                      d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
                      clip-rule="evenodd"></path>
                  </svg>
                </template>
              </button>
            </li>
          </ul>
        </div>
      </header>
      
      <main class="flex-1 overflow-y-auto bg-gray-100 dark:bg-gray-900">
        <div class="max-w-7xl mx-auto px-6 py-8">
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 mb-6">
            <div class="flex justify-between items-center">
              <div>
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white">
                  Chi tiết lớp học: {{classes.class_name}}
                </h3>
                <div class="mt-2 space-y-1">
                  <p class="text-gray-600 dark:text-gray-400 text-sm">
                    <span class="font-medium">Mã lớp:</span> {{classes.class_id}}
                  </p>
                  <p class="text-gray-600 dark:text-gray-400 text-sm">
                    <span class="font-medium">Giảng viên:</span> {{classes.instructor}}
                  </p>
                </div>
              </div>
              <button id="add-student-btn" 
                      class="px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-md hover:bg-indigo-700 transition-colors duration-200">
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Thêm học sinh
              </button>
            </div>
          </div>

          <!-- Danh sách học sinh -->
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b dark:border-gray-700">
              <h4 class="text-lg font-semibold text-gray-900 dark:text-white">Danh sách học sinh</h4>
            </div>
            <div class="overflow-x-auto">
              <table id="student-table" class="w-full">
                <thead class="bg-gray-50 dark:bg-gray-700">
                  <tr class="text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wide">
                    <th class="px-6 py-3 text-left">MSSV</th>
                    <th class="px-6 py-3 text-left">Họ tên</th>
                    <th class="px-6 py-3 text-left">Email</th>
                    <th class="px-6 py-3 text-left">Số điện thoại</th>
                    <th class="px-6 py-3 text-left">Điểm</th>
                  </tr>
                </thead>
                <tbody id="student-table-body" class="divide-y dark:divide-gray-700">
                  {{#if students}}
                    {{#each students}}
                      <tr class="text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                        <td class="px-6 py-4 text-sm">{{this.student_id}}</td>
                        <td class="px-6 py-4 text-sm">{{this.full_name}}</td>
                        <td class="px-6 py-4 text-sm">{{this.email}}</td>
                        <td class="px-6 py-4 text-sm">{{this.phone_number}}</td>
                        <td class="px-6 py-4 text-sm">
                          <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full 
                            {{#if this.grade}}bg-green-100 text-green-800{{else}}bg-gray-100 text-gray-800{{/if}}">
                            {{#if this.grade}}{{this.grade}}{{else}}Chưa có{{/if}}
                          </span>
                        </td>
                      </tr>
                    {{/each}}
                  {{else}}
                    <tr class="text-gray-700 dark:text-gray-400">
                      <td colspan="5" class="px-6 py-4 text-sm text-center">Chưa có học sinh nào trong lớp</td>
                    </tr>
                  {{/if}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Modal Thêm Học Sinh -->
  <div id="add-student-modal" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center z-50 hidden">
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-2xl w-full max-w-md p-6 transform transition-all">
      <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">Thêm học sinh vào lớp</h3>
      <form id="add-student-form">
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" for="student-id">
            MSSV
          </label>
          <input type="number" id="student-id"
                 class="w-full px-4 py-2 text-sm text-gray-700 bg-gray-50 dark:bg-gray-700 dark:text-gray-200 rounded-md border border-gray-200 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-all"
                 required>
        </div>
        <div class="flex justify-end gap-3">
          <button type="button" 
                  class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600 transition-colors"
                  onclick="closeAddStudentModal()">
            Hủy
          </button>
          <button type="submit" 
                  class="px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-md hover:bg-indigo-700 transition-colors">
            Thêm
          </button>
        </div>
      </form>
    </div>
  </div>

  <script src="/assets/scripts/class/class.js"></script>

</body>